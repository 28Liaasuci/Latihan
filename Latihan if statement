#include <iostream>

using namespace std;

int main() {
  int tugas, uts, uas, hasil;
  cout<<"Masukkan nilai tugas:";
  cin>>tugas;
  cout<<"Masukkan nilai uts:";
  cin>>uts;
  cout<<"Masukkan nilai uas:";
  cin>>uas;
  hasil=(0.3*tugas)+(0.3*uts)+(0.4*uas);
  cout<<"Nilai rata-rata:"<<hasil << endl ;
 
  if (hasil>=85){
  cout<<"A"<<endl;
  }
  else if (hasil>85 and hasil >=75){
  cout<<"B"<<endl;
  }
  else if (hasil >75 and hasil >=60){
      cout<<"C"<<endl;
  }
  else if (hasil> 60 and hasil >= 45){
      cout<<"D"<<endl;
  }
  else if (hasil < 45){
      cout<<"E"<<endl;
  }
  return 0;
}
